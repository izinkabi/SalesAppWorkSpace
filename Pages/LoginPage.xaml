<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MSalesMobileApp.Pages.LoginPage"
             Title="Login"
             xmlns:viewmodel="clr-namespace:MSalesMobileApp.ViewModels"
             x:DataType="viewmodel:LoginViewModel">
    
    <Grid RowDefinitions="100,Auto,Auto,Auto,Auto"
          RowSpacing="12">
        
        <Image Source="loginicon.png"
               HorizontalOptions="CenterAndExpand"
               Margin="10"/>
        <Entry Placeholder="Username" 
               Text="{Binding Username}"
               Grid.Row="1"
               Margin="10"/>

        <Entry Placeholder="Password"
               IsPassword="True"
               Text="{Binding Password}"
               Grid.Row="2"
               Margin="10" />

        <CheckBox Grid.Row="3"
                  ToolTipProperties.Text="RememberMe"/>
        <Button Text="Sign In"
                Grid.Row="4"
                HorizontalOptions="Center"
                Margin="10"
                Command="{Binding GotoCampaignsCommand}"
                BackgroundColor="Orange"/>   

    </Grid>
 
</ContentPage>