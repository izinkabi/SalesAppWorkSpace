<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MSalesMobileApp.Pages.PaymentDetailsPage"
             Title="Payment Details">
    
    <Grid RowDefinitions="Auto,Auto,Auto"
          RowSpacing="10">
        <Picker x:Name="picker"
                HorizontalOptions="Center"
                FontSize="18"
                Title="Payment Type">  

            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>EFT</x:String>
                    <x:String>Cash</x:String>
                    <x:String>Employer Debit Order</x:String>
                    <x:String>Direct Bank Deposit </x:String>
                    <x:String>Debit/Bank Card</x:String>
                    <x:String>Easy Pay</x:String>
                    <x:String>Cheque</x:String>
                    <x:String>Debit Card</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>

        <Entry Text="Total:0.00"
               Grid.Row="1"
               HorizontalOptions="End"
               Margin="10"/>


        <Button Text="Next"
                Grid.Row="2"
                HorizontalOptions="End"
                Margin="10"
                BackgroundColor="Orange"/> 
    </Grid>
</ContentPage>